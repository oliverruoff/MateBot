FROM ros:humble

# install bootstrap tools
RUN apt-get update && apt-get install --no-install-recommends -y \
    build-essential \
    git \
    python3-colcon-common-extensions \
    python3-colcon-mixin \
    python3-rosdep \
    python3-vcstool \
    && rm -rf /var/lib/apt/lists/*

# bootstrap rosdep
# RUN rosdep init
RUN rosdep update --rosdistro $ROS_DISTRO

# setup colcon mixin and metadata
# RUN colcon mixin add default https://raw.githubusercontent.com/colcon/colcon-mixin-repository/master/index.yaml
RUN colcon mixin update
# RUN colcon metadata add default https://raw.githubusercontent.com/colcon/colcon-metadata-repository/master/index.yaml 
RUN colcon metadata update

# install ros2 packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    ros-humble-ros-base=0.10.0-1* \
    && rm -rf /var/lib/apt/lists/*

# load lidar package 
RUN     mkdir -p ldlidar_ros2_ws/src 
WORKDIR /ldlidar_ros2_ws/src 
RUN     git clone  https://github.com/ldrobotSensorTeam/ldlidar_ros2.git 
WORKDIR /ldlidar_ros2_ws/src/ldlidar_ros2 
RUN     git submodule update --init --recursive
# RUN     sudo chmod 777 /dev/ttyUSB0
RUN     colcon build 
RUN     source install/local_setup.bash
RUN     echo "source /ldlidar_ros2_ws/src/ldlidar_ros2/install/local_setup.bash" >> ~/.bashrc
